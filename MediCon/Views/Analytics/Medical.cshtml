
@{
    //ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
     .chartdivLabPrice {
        height: 250px;
        align-content:center
    }
</style>

<div ng-controller="AnalyticsCtrl">
    <!-- HEADER -->
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-4">
            <h2>LABORATORY</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="">Laboratory</a>
                </li>
                <li class="active">
                    <strong>List</strong>
                </li>
            </ol>
        </div>
    </div>
    <div id="wrapper" class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <h2>MEDICAL ANALYTICS</h2>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <button type="button" class="btn btn-w-m btn-primary" disabled><b style="font-size:16px;">MALE</b></button>
                    </div>
                    <div class="ibox-content">
                        <h1 class="no-margins">40 886,200</h1>
                        <div class="stat-percent font-bold text-success">98% <i class="fa fa-bolt"></i></div>
                        <small>Total income</small>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <button type="button" class="btn btn-w-m btn-primary" disabled><b style="font-size:16px;">MALE</b></button>
                    </div>
                    <div class="ibox-content">
                        <h1 class="no-margins">275,800</h1>
                        <div class="stat-percent font-bold text-info">20% <i class="fa fa-level-up"></i></div>
                        <small>New orders</small>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5 class="label label-primary pull-right">TOTAL # of EMPLOYEE AVAILEDVistits</h5>
                    </div>
                    <div class="ibox-content">
                        <h1 class="no-margins">106,120</h1>
                        <div class="stat-percent font-bold text-navy">44% <i class="fa fa-level-up"></i></div>
                        <small>New visits</small>
                    </div>
                </div>
            </div>
        </div>
    </div>


    
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>LABORATORY</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Laboratory</th>
                                <th>Price</th>
                                <th>Male</th>
                                <th>Female</th>
                                <th>Total Patient</th>
                                <th>Total Cost</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="t in tempLabPricesData">
                                <td>{{t.labTestName}}</td>
                                <td>{{t.price}}</td>
                                <td>{{t.male}}</td>
                                <td>{{t.female}}</td>
                                <td>{{t.male+t.female}}</td>
                                <td>{{t.price * (t.male+t.female)}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="ibox" style="overflow:auto;width:100%">
                <div class="ibox-content">
                    <h1 style="text-align:center">Male</h1>
                    <div id="chartDivMale" class="chartdivLabPrice"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="ibox">
                <div class="ibox-content">
                    <h1 style="text-align:center">Female</h1>
                    <div id="chartDivFemale" class="chartdivLabPrice"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
   <script src="~/Scripts/AngularJS/Analytics/AnalyticsCtrl.js"></script>
    <script src="https://cdn.amcharts.com/lib/5/index.js"></script>
    <script src="https://cdn.amcharts.com/lib/5/percent.js"></script>
    <script src="https://cdn.amcharts.com/lib/5/themes/Animated.js"></script>
}
