
@{
    //ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    select2-selection__rendered {
        line-height: 31px !important;
    }

    .select2-container .select2-selection--single {
        height: 35px !important;
    }

    .select2-selection__arrow {
        height: 34px !important;
    }

    .center {
        margin: auto;
        width: 60%;
        border: 1px solid #a4a4a4;
        padding: 10px;
    }
</style>
<div ng-controller="rxCtrl">
    <!-- HEADER -->
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-4">
            <h2>LABORATORY</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="">Laboratory</a>
                </li>
                <li class="active">
                    <strong>List</strong>
                </li>
            </ol>
        </div>
    </div>
    <div id="wrapper" class="wrapper wrapper-content animated fadeInRight">
        <div class="col-lg-12 col-md-12 col-sm-12 m-b-md">
            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#tab-6" style="color:#66b2b2;">PRESCRIPTIONS</a></li>
                </ul>
                <div class="tab-content ">
                    <div id="tab-6" class="tab-pane active">
                        <div class="panel-body">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <form class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" style="text-align:center !important">Consultation Date:</label>
                                        <div class="col-lg-2 col-md-4 col-sm-4">
                                            <input type="date" id="filterdate" ng-change="filter_date(filterdate)" name="filterdate" style="text-transform:uppercase" ng-model="filterdate" class="text-center form-control">
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-xs-12 col-lg-12 col-md-12">
                                    <div class="animated fadeInRight ecommerce">
                                        <div class="panel panel-info">
                                            <div class="panel-heading text-center">
                                                <i class="fa fa-list-alt"></i>
                                                <label class="text-center">LIST OF PRESCRIPTIONS</label>
                                            </div>
                                            <div class="panel-body">
                                                <div class="row">
                                                    <div class="col-xs-12 col-lg-12 col-md-12">
                                                        <div class="table-responsive">
                                                            <table id="rxTable" class="table table-striped table-bordered table-hover" style="width:100%">
                                                                <thead>
                                                                    <tr>
                                                                        <th>ID #</th>
                                                                        <th>Name</th>
                                                                        <th>Office</th>
                                                                        <th>Print</th>
                                                                    </tr>
                                                                </thead>
                                                            </table>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- RX INFORMATION -->
    </div>
</div>
@section scripts
{
    <script src="~/Scripts/AngularJS/RX/RxCtrl.js?v=1.0"></script>
}




