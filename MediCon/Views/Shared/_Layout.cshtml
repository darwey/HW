<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>DAVNOR MEDICON</title>
    <link rel="icon" href="~/Content/ISPINIA/img/MedconICon-01.ico" type="image/x-icon" />
    <link href="~/Scripts/js/dataTables/datatables.min.css" rel="stylesheet" />
    <link href="~/Scripts/js/select2/select2.min.css" rel="stylesheet" />
    <link href="~/Content/ISPINIA/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" rel="stylesheet" />
    <link href="~/Content/ISPINIA/sweetalert/sweetalert.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    
    @*@Scripts.Render("~/bundles/modernizr")*@


</head>
<body>
    
    <div id="wrapper">
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav metismenu" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <span>
                                <img alt="image" class="img-circle" src="~/Content/ISPINIA/img/profile_64.png" />
                              @*<img alt="image" class="img-circle" src="~/Content/img/profile_small.jpg" />*@
                            </span>
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="clear">
                                    <span class="block m-t-xs">
                                        <strong class="font-bold">@Session["firstName"]  @Session["middleName"] @Session["lastName"] @Session["extName"]</strong>
                                    </span> <span class="text-muted text-xs block" style="font-weight:600;">@Session["userTypeDesc"]</span>
                                </span>
                            </a>
                        </div>
                        <div class="logo-element">
                            <i class="fa fa-user-md"></i>
                            <small style="font-size:12px;">MEDICON</small>
                                <br />
                        </div>
                    </li>
                    <li class="active">
                        <a href="~/Home/Index"><i class="fa fa-th-large"></i> <span class="nav-label">Dashboards</span></a>
                    </li>
                    @*<li id="QR">
                        <a><i class="fa fa-qrcode"></i> <span class="nav-label">QR Code</span><span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level collapse">
                            <li id="EntranceScan">
                                <a href="~/QPass/EntranceScanning">Entrance Scanning</a>
                            </li>
                            <li id="socialOthers">
                                <a href="~/QPass/QRRegistration">QR Code Registrations</a>
                            </li>
                        </ul>
                    </li>*@
                    <li id="VITALSIGNS">
                        <a href="../VitalSigns/VSview"><i class="fa fa-stethoscope"></i> <span class="nav-label">Vital Signs</span></a>
                    </li>
                    <li id="MEDCON">
                        <a href="../MedicalConsultation/Index"><i class="fa fa-user-md"></i> <span class="nav-label">Medical Consultation</span></a>
                    </li>
                    <li id="LAB">
                        <a href="../Labtest/Index"><i class="fa fa-eyedropper"></i> <span class="nav-label">Laboratory</span></a>
                    </li>
                    <li id="HEALTH">
                        <a href="widgets.html"><i class="fa fa-stethoscope"></i> <span class="nav-label">Health</span><span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level collapse" id="HEALTHsub">
                            @*<li><a href="~/SystemUser/Index">Accounts</a></li>*@
                        </ul>
                    </li>
                    <li id="UTILITY">
                        <a href="widgets.html"><i class="fa fa-gear"></i> <span class="nav-label">Utility</span><span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level collapse" id="UTILITYsub">
                            @*<li><a href="~/SystemUser/Index">Accounts</a></li>*@
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

        <div id="page-wrapper" class="gray-bg dashbard-1">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                    </div>
                    <ul class="nav navbar-top-links navbar-right">
                        <li>
                            <span class="m-r-sm text-muted welcome-message">Welcome to MEDICON</span>
                        </li>
                     
                        <li>
                            <a href="~/Account/Signout">
                                <i class="fa fa-sign-out"></i> Log out
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

            <div class="body-content" ng-app="MedConApp">
                @RenderBody()

                <div class="footer">
                    <div class="pull-right">
                        Template by <strong>INSPINIA</strong>
                    </div>
                    <div>
                        <strong style="color:#66b2b2;"> DAVNOR MEDICON &copy; 2022</strong>
                    </div>
                </div>
            </div>

        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
  
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/js/QRScan/instascan.min.js"></script>
    <script src="~/Scripts/js/dataTables/datatables.min.js"></script>
    <script src="~/Scripts/js/select2/select2.full.min.js"></script>
    <script src="~/Content/ISPINIA/sweetalert/sweetalert.min.js"></script>
    <script src="~/Scripts/js/Moment/moment.min.js"></script>

    <script>
        $(function(){

            var utility = $('#UTILITY');
            var health = $('#HEALTH');
            var vitalSigns = $('#VITALSIGNS'); 
            var medcon = $('#MEDCON');
            var lab = $('#LAB');

            health.hide();
            utility.hide();
            vitalSigns.hide();
            medcon.hide();
            lab.hide();

            $.post('../Home/gMenuAccess').then(function (d) {
                for(var x =0;x<d.length;x++){
                    if(d[x].mainMenu =='UTILITY'){
                        utility.show();
                        $('#UTILITYsub').append('<li class="nav-item"><a href="../'+d[x].controller+'/'+d[x].action+'" class="nav-link"><i class="fa fa-circle-o"></i> '+d[x].menuDesc+'</a></li>');
                    }

                    else  if (d[x].mainMenu == 'HEALTH') {
                        health.show();
                        $('#HEALTHsub').append('<li class="nav-item"><a href="../' + d[x].controller + '/' + d[x].action + '" class="nav-link"><i class="fa fa-circle-o"></i> ' + d[x].menuDesc + '</a></li>');
                    }

                    else if (d[x].mainMenu == 'VITAL SIGNS') {
                        vitalSigns.show();
                    }

                    else if (d[x].mainMenu == 'MEDCON') {
                        medcon.show();
                    }

                    else if (d[x].mainMenu == 'LAB') {
                        lab.show();
                    }
                }
            })
        })
</script>


</body>
</html>
