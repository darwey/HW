@{
    //ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    select2-selection__rendered {
        line-height: 31px !important;
    }

    .select2-container .select2-selection--single {
        height: 35px !important;
    }

    .select2-selection__arrow {
        height: 34px !important;
    }

    .center {
        margin: auto;
        width: 60%;
        border: 1px solid #a4a4a4;
        padding: 10px;
    }
</style>
<div ng-controller="userCtrl">
    <!-- HEADER -->
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-4">
            <h2>User Management</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="">System Users</a>
                </li>
                <li class="active">
                    <strong>User Managent</strong>
                </li>
            </ol>
        </div>
    </div>

    <!-- USER TABLE -->
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-xs-12">
                <div class="animated fadeInRight ecommerce">
                    <div class="panel panel-info">
                        <div class="panel-heading text-center">
                            <i class="fa fa-users"></i>
                            <label class="text-center">LIST OF USERS</label>
                            <button type="submit" class="btn btn-success btn-sm pull-right" style="margin-right: 2px; border-color: #ffffff" ng-click="addUser()"><i class="fa fa-plus"></i> <i class="fa fa-user"></i> Add Personnel </button>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="table-responsive">
                                        <table id="userTable" class="table table-striped table-bordered table-hover" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Full Name</th>
                                                    <th>Sex</th>
                                                    <th>Position</th>
                                                    <th>User Type</th>
                                                    <th>Contact No.</th>
                                                    <th>Username</th>
                                                    <th>Active</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- USER TABLE -->

    <!-- ADD USER MODAL -->
    <div class="modal inmodal" id="addUserModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content animated bounceInRight">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <i class="fa fa-user modal-icon"></i>
                    <h5 class="modal-title" style="color:#66b2b2">ADD PERSONNEL</h5>
                    @*<small class="font-bold">Lorem Ipsum is simply dummy text of the printing and typesetting industry.</small>*@
                </div>
                <form id="USER_FORM" name="USER_FORM">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-xs-12 col-lg-12 col-md-12">
                                <div class="animated fadeInRight ecommerce">
                                    <div class="panel panel-info">
                                        <div class="panel-heading text-center">
                                            @*<i class="fa fa-user"></i>*@
                                            <label class="text-center">PERSONNEL INFORMATION</label>
                                        </div>
                                        <div class="panel-body">
                                            <div class="row">
                                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                        <div class="row">
                                                            <div class="col-sm-4">
                                                                <div class="form-group">
                                                                    <label class="control-label" for="firstName">First Name</label><span style="color:#ff0000"> *</span>
                                                                    <input type="text" required ng-model="users.personnel_firstName" placeholder="Full Name" class="form-control" />
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-3">
                                                                <div class="form-group">
                                                                    <label class="control-label" for="middleName">Middle Name</label>
                                                                    <input type="text" ng-model="users.personnel_middleName" placeholder="Full Name" class="form-control" />
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-3">
                                                                <div class="form-group">
                                                                    <label class="control-label" for="lastName">Last Name</label><span style="color:#ff0000"> *</span>
                                                                    <input type="text" required ng-model="users.personnel_lastName" placeholder="Last Name" class="form-control" />
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-2">
                                                                <div class="form-group">
                                                                    <label class="control-label" for="extName">Suffix</label>
                                                                    <input type="text" ng-model="users.personnel_extName" placeholder="Suffix" class="form-control" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-sm-4 col-xs-4 col-lg-4">
                                                                <label class="control-label">Sex</label><span style="color:#ff0000"> *</span>
                                                                <div class="form-group text-left">
                                                                    <div class="radio radio-primary radio-inline">
                                                                        <input type="radio" id="radio_sex_male" value="MALE" name="radio_sex" ng-model="users.sex" ng-checked="users.sex" />
                                                                        <label for="radio_sex_male">Male </label>
                                                                    </div>
                                                                    <div class="radio radio-danger radio-inline">
                                                                        <input type="radio" id="radio_sex_female" value="FEMALE" name="radio_sex" ng-model="users.sex" ng-checked="users.sex" />
                                                                        <label for="radio_sex_female">Female </label>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-4 col-xs-4 col-lg-4">
                                                                <div class="form-group">
                                                                    <label class="control-label" for="contactNum">Contact No.</label>
                                                                    <input type="number" ng-model="users.contactNum" placeholder="Contact Number" class="form-control" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <hr class="hr-line-dashed" />
                                                        <div class="row">
                                                            <div class="col-sm-4 col-xs-4 col-lg-4">
                                                                <div class="form-group">
                                                                    <label class="control-label" for="userType">Select Service</label><span style="color:#ff0000"> *</span>
                                                                    <select ng-model="users.serviceID" name="userType" id="service" required style="width: 100%;" text-transform uppercase" class="form-control">
                                                                        <option value=""></option>
                                                                        <option value="VITAL SIGN">VITAL SIGN</option>
                                                                        <option value="MEDICAL CONSULTATION">MEDICAL CONSULTATION</option>
                                                                        <option value="DENTAL EXTRACTION">DENTAL EXTRACTION</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-4 col-xs-4 col-lg-4">
                                                                <div class="form-group">
                                                                    <label class="control-label" for="userType">Select User Type</label><span style="color:#ff0000"> *</span>
                                                                    <select ng-model="users.userType" name="userType" id="userType" required style="width: 100%;" text-transform uppercase" class="form-control">
                                                                        <option value=""></option>
                                                                        <option value="ADMINISTRATOR">ADMINISTRATOR</option>
                                                                        <option value="ENCODER">ENCODER</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-4 col-xs-4 col-lg-4">
                                                                <div class="form-group">
                                                                    <label class="control-label" for="userType">Position</label><span style="color:#ff0000"> *</span>
                                                                    <input type="text" required ng-model="users.position" placeholder="Postion" class="form-control" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <hr class="hr-line-dashed" />
                                                        <div class="row">
                                                            <div class="col-sm-4">
                                                                <div class="form-group">
                                                                    <label class="control-label" for="username">Username</label><span style="color:#ff0000"> *</span>
                                                                    <input type="text" id="username" name="username" required ng-model="users.username" placeholder="Username" class="form-control" />
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-4">
                                                                <div class="form-group">
                                                                    <label class="control-label" for="password">Password</label><span style="color:#ff0000"> *</span>
                                                                    <input id="password1" name="password1" type="password" ng-model="users.password" class="form-control" placeholder="Password" required>
                                                                    @*<input type="checkbox" ng-click="showPass1()"> Show Password*@
                                                                    <div class="checkbox checkbox-danger">
                                                                        <input id="pass1" name="pass1" type="checkbox" ng-click="showPass1()" />
                                                                        <label for="pass1">Show Password</label>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-sm-4">
                                                                <div class="form-group">
                                                                    <label class="control-label" for="cpassword">Confirm Password</label><span style="color:#ff0000"> *</span>
                                                                    <input id="password2" type="password" name="password2" data-validate-linked="password" ng-model="users.cpassword" class="form-control" placeholder="Confirm Password" required>

                                                                    <div class="checkbox checkbox-danger">
                                                                        <input id="pass2" name="pass2" type="checkbox" ng-click="showPass2()" />
                                                                        <label for="pass2">Show Password</label>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger btn-sm" style="margin-right: 2px;" ng-click="cancelBtn()"><i class="fa fa-exclamation-circle"></i> Cancel </button>
                        <button type="submit" class="btn btn-primary btn-sm" style="margin-right: 2px;" ng-click="!USER_FORM.$invalid ? saveUserz(users):''"><i class="fa fa-save"></i> Save </button>
                        @*<button type="button" class="btn btn-white" data-dismiss="modal">Close</button>*@
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- ADD USER MODAL -->

</div>

@section scripts
{
    <script src="~/Scripts/AngularJS/UserManagment/UserManagement.js"></script>
}






